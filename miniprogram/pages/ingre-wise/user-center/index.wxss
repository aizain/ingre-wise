.user-center {
  min-height: 100vh;
  padding: 32rpx;
  background: linear-gradient(180deg, #EFF6FF 0%, rgba(239, 246, 255, 0.5) 50%, rgba(243, 232, 255, 0.3) 100%);
}

/* 用户信息卡片 */
.user-card {
  padding: 32rpx 32rpx 80rpx;
  background: linear-gradient(135deg, 
              rgba(220, 190, 255, 1) 0%,
              rgba(180, 200, 255, 1) 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: -48rpx;
  position: relative;
  z-index: 0;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.level {
  font-size: 24rpx;
  color: #FFFFFF;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(4rpx);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  display: inline-flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
}

.level::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #FFFFFF;
  border-radius: 50%;
  margin-right: 8rpx;
  opacity: 0.8;
}

/* 数据统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin: 0 24rpx 24rpx;
  position: relative;
  z-index: 1;
}

.stats-card::before {
  display: none;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  padding: 0 16rpx;
}

/* 添加分隔线 */
.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
}

.stat-num {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666666;
}

/* 功能导航网格 */
.nav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.nav-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.nav-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.nav-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 权限管理 */
.permission-card {
  margin: 24rpx 0 0;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.permission-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.permission-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.permission-icon {
  width: 40rpx;
  height: 40rpx;
}

.permission-detail {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.permission-name {
  font-size: 26rpx;
  color: #333333;
}

.permission-desc {
  font-size: 22rpx;
  color: #999999;
}

.permission-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

.permission-status.authorized {
  color: #07C160;
}

.auth-btn {
  margin: 0 !important;
  padding: 0 12rpx !important;
  height: 44rpx !important;
  min-height: 44rpx !important;
  line-height: 44rpx !important;
  font-size: 22rpx !important;
  color: #FFFFFF !important;
  background: #1890FF !important;
  border-radius: 22rpx !important;
  min-width: 72rpx !important;
  width: auto !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  border: none !important;
}

/* 识别策略卡片 */
.strategy-card {
  margin-top: 24rpx;
}

.card-header {
  margin-bottom: 24rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.strategy-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.strategy-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.strategy-item.active {
  background: rgba(111, 165, 255, 0.1);
  border: 1rpx solid rgba(111, 165, 255, 0.3);
}

.strategy-content {
  flex: 1;
}

.strategy-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.strategy-desc {
  font-size: 24rpx;
  color: #666;
}

.strategy-check {
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
}

.strategy-check image {
  width: 100%;
  height: 100%;
} 