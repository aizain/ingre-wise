.ingredient-container {
  padding: 32rpx;
  background: linear-gradient(0deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), 
              linear-gradient(180deg, #EFF6FF 0%, rgba(239, 246, 255, 0.5) 50%, rgba(243, 232, 255, 0.3) 100%);
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #EFF6FF;
  border-top: 4rpx solid #6B46C1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 28rpx;
  color: #666666;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-container text {
  font-size: 28rpx;
  color: #666666;
}

/* 头部样式 */
.header {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-main {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.title-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 32rpx;
}

.title-group {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.alias {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.4;
}

.molecule-image {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

/* 章节通用样式 */
.section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #6B46C1;
  border-radius: 4rpx;
}

.section-icon {
  width: 32rpx;
  height: 32rpx;
}

.section-content {
  padding: 16rpx 0;
}

/* 来源列表样式 */
.source-section {
  margin-bottom: 32rpx;
}

.source-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.source-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.source-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(239, 246, 255, 0.5);
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
}

.source-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 提取方式样式 */
.section-subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.extraction-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 健康评级样式 */
.safety-rating {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.stars {
  display: flex;
  gap: 8rpx;
}

.star-icon {
  width: 32rpx;
  height: 32rpx;
}

.safety-tag {
  background: #4CAF50;
  color: #FFFFFF;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.safety-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 作用与功效样式 */
.effects-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.effect-item {
  background: rgba(239, 246, 255, 0.5);
  padding: 16rpx;
  border-radius: 12rpx;
}

.effect-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.plus-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 注意事项样式 */
.cautions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.caution-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  background: rgba(254, 242, 242, 0.5);
  padding: 16rpx;
  border-radius: 12rpx;
}

.warning-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.caution-item text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
} 